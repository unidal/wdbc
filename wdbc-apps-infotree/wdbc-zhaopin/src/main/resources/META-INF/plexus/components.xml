<plexus>
	<components>
		<component>
			<role>org.unidal.wdbc.http.Session</role>
			<implementation>org.unidal.wdbc.http.impl.DefaultSession</implementation>
			<configuration>
				<headers>
					<header name="User-Agent">Mozilla/4.0 (compatible; MSIE 6.0; Windows NT 5.1; SV1; Maxthon; .NET CLR 1.1.4322)</header>
				</headers>
			</configuration>
		</component>
		<component>
			<role>org.unidal.wdbc.zhaopin.Configuration</role>
			<implementation>org.unidal.wdbc.zhaopin.Configuration</implementation>
			<configuration>
				<config>config.xml</config>
			</configuration>
		</component>
		<component>
			<role>org.unidal.wdbc.http.Processor</role>
			<implementation>org.unidal.wdbc.zhaopin.Processor</implementation>
			<requirements>
				<requirement>
					<role>org.unidal.wdbc.zhaopin.Configuration</role>
				</requirement>
				<requirement>
					<role>org.unidal.wdbc.infotree.InfoTreeConnector</role>
				</requirement>
			</requirements>
		</component>
		<component>
			<role>org.unidal.wdbc.http.Flow</role>
			<implementation>org.unidal.wdbc.http.impl.DefaultFlow</implementation>
			<configuration>
				<handler query="page-links" interval="2">
					<page name="list"/>
					<handler query="list" interval="2">
						<page name="details"/>
						<handler query="details">
							<processor name="default"/>
						</handler>
					</handler>
				</handler>
			</configuration>
		</component>
		<component>
			<role>org.unidal.wdbc.WdbcQuery</role>
			<role-hint>page-links</role-hint>
			<implementation>org.unidal.wdbc.zhaopin.PageLinksQuery</implementation>
			<configuration>
				<uriPattern><![CDATA[{0}&page={1}]]></uriPattern>
			</configuration>
			<requirements>
				<requirement>
					<role>org.unidal.wdbc.zhaopin.Configuration</role>
				</requirement>
			</requirements>
		</component>
		<component>
			<role>org.unidal.wdbc.http.Request</role>
			<role-hint>list</role-hint>
			<implementation>org.unidal.wdbc.http.impl.FormRequest</implementation>
			<configuration>
				<action>${page-links:link}</action>
			</configuration>
		</component>
		<component>
			<role>org.unidal.wdbc.WdbcQuery</role>
			<role-hint>list</role-hint>
			<implementation>org.unidal.wdbc.SelectQuery</implementation>
			<configuration>
				<paths>
					<path name="date">table[2-].tr[2-].td[5]</path>
					<path name="link">table[2-].tr[2-].td[2].a.@href</path>
					<path name="title">table[2-].tr[2-].td[2].a</path>
				</paths>
			</configuration>
			<requirements>
				<requirement>
					<role>org.unidal.wdbc.query.WdbcFilter</role>
					<role-hint>list</role-hint>
				</requirement>
			</requirements>
		</component>
		<component>
			<role>org.unidal.wdbc.query.WdbcFilter</role>
			<role-hint>list</role-hint>
			<implementation>org.unidal.wdbc.zhaopin.ListFilter</implementation>
			<requirements>
				<requirement>
					<role>org.unidal.wdbc.http.Session</role>
				</requirement>
			</requirements>
		</component>
		<component>
			<role>org.unidal.wdbc.http.Request</role>
			<role-hint>details</role-hint>
			<implementation>org.unidal.wdbc.http.impl.FormRequest</implementation>
			<configuration>
				<action>${list:link}</action>
			</configuration>
		</component>
		<component>
			<role>org.unidal.wdbc.WdbcQuery</role>
			<role-hint>details</role-hint>
			<implementation>org.unidal.wdbc.SelectQuery</implementation>
			<configuration>
				<paths>
					<path name="desc">div.div.div.*text</path>
				</paths>
			</configuration>
			<requirements>
				<requirement>
					<role>org.unidal.wdbc.query.WdbcFilter</role>
					<role-hint>details</role-hint>
				</requirement>
			</requirements>
		</component>
		<component>
			<role>org.unidal.wdbc.query.WdbcFilter</role>
			<role-hint>details</role-hint>
			<implementation>org.unidal.wdbc.zhaopin.DetailsFilter</implementation>
		</component>
	</components>
</plexus>
